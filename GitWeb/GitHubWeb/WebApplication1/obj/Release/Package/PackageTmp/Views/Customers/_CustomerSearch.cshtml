
@model Web.Models.ViewModel.CustomerSearchViewModel
<table class="table" id="tblCustomers">
    <thead>
        <tr>
            <th>
                Customer Code
            </th>
            <th>
                Custmer Name
            </th>
            <th>
                Address
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Allcustomer)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.CustCode.ToString(), "CustomerDetails", new { id = item.CustCode })
                </td>
                <td>
                    @Html.ActionLink(item.CustmerName.ToString(), "CustomerDetails", new { id = item.CustCode })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Customers",  new { id = item.CustCode })" title="Update">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>  |
                    <a href="@Url.Action("Details", "Customers",  new { id = item.CustCode })" title="Details">
                        <span class="glyphicon glyphicon-list-alt"></span>
                    </a>  |
                    <a href="@Url.Action("Delete", "Customers",  new { id = item.CustCode })" title="Delete">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
