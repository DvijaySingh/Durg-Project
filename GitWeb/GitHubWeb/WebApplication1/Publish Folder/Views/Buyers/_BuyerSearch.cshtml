@model Web.Models.ViewModel.BuyerSearchViewModel
<table class="table" id="tblbuyers">
    <thead>
        <tr>
            <th>
               Customer Name
            </th>
            <th>
                 Code
            </th>
            <th>
                Address
            </th>
            <th>
                DepositeAmount
            </th>
            <th>
                OutstandingAmount
            </th>
            <th>
                BuyDate
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Allbuyer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepositeAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OutstandingAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyDate)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Buyers",  new { id = item.BuyerID })" title="Update">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>  |
                    <a href="@Url.Action("Details", "Buyers",  new { id = item.BuyerID })" title="Details">
                        <span class="glyphicon glyphicon-list-alt"></span>
                    </a>  |
                    <a href="@Url.Action("Delete", "Buyers",  new { id = item.BuyerID })" title="Delete">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
