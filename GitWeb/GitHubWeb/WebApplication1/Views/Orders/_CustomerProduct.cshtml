@model Web.Models.OrderModel

<table class="table table-striped" id="tblCProducts">
    <thead>
        <tr>
          
            <th>
                Product Name
            </th>
            <th>
                AppxWeight
            </th>
            <th>
                ActualWeight
            </th>
            <th>
                Description
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.lstcusProduct)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppxWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActualWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                </td>
            </tr>
        }
    </tbody>
</table>

