                <div class="col-md-9">

                </div>
                <div class="col-md-3">
                    <input type="button" id="btnAddCP" value="Add Produc" class="btn btn-default" />
                    <input type="button" id="btnRemoveCP" value="Remove Produc" class="btn btn-default" />
                </div>
            </div>*@

    </div>
</div>

