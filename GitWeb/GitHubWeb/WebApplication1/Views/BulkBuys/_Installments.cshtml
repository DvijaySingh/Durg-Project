
@model Web.Models.ViewModel.BulkBuyViewModel

<table class="table table-striped" id="tblinstallment">
    <thead>
        <tr>

            <th>
               Amount
            </th>
            <th>
              Date
            </th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.lstinstallments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InstallmentDate)
                </td>

                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.ProductID })*@
                    @*<button id="@item.InstallmentID" class="glyphicon glyphicon-edit btnInstallmetedit">Edit</button>*@
                    @Ajax.ActionLink("Update", "GetInstallMent", "BulkBuys", new { InstallmentID = item.InstallmentID  },
                    new AjaxOptions
                    {
                        HttpMethod = "POST",
                        UpdateTargetId = "AddInstallment",
                        
                    }, new { @class = "glyphicon glyphicon-remove" })  |
                    @Ajax.ActionLink("Delete", "DeleteInstallMent", "BulkBuys", new { InstallmentID = item.InstallmentID,bulkBuyID=item.BulkBuyID },
                    new AjaxOptions
                    {
                        Confirm = "are you sure to perform the deletion.",
                        HttpMethod = "POST",
                        UpdateTargetId = "lstinstallment",
                        OnSuccess = "RefreshInstallmentDatatable",
                    }, new { @class = "glyphicon glyphicon-remove" })
                </td>
            </tr>
        }
    </tbody>
</table>


