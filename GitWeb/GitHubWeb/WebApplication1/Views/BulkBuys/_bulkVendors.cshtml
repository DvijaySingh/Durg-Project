
@model Web.Models.ViewModel.BulkBuyViewModel

<table class="table table-striped" id="tblbulkProducts">
    <thead>
        <tr>

            <th>
                Name
            </th>
            <th>
                Amount Taken
            </th>
            <th>
                Rate
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Return Amount
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.lstVendors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TakenAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnAmount)
                </td>

                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.ProductID })*@
                    <button id="@item.BuyVendorID" class="btn btn-default btnvendoredit">Edit</button>
                    @Ajax.ActionLink("Delete", "DeleteVendor", "BulkBuys", new { VendorID = item.BuyVendorID, bulkBuyID = item.BulkByID },
                    new AjaxOptions
                    {
                        Confirm = "are you sure to perform the deletion.",
                        HttpMethod = "POST",
                        UpdateTargetId = "lstVendors",
                        OnSuccess = "RefreshVendorDatatable",
                    })
                </td>
            </tr>
        }
    </tbody>
</table>

